      <script>
        function handleLike(plantId) {
          const heartIcon = document.getElementById("heartIcon" + plantId);
          const likeCountElement = document.getElementById("likeCount" + plantId);
          
          let isLiked = false;
          let likeCount = 25;
          
          likeCountElement.textContent = likeCount + " Likes";
    
          heartIcon.addEventListener("click", () => {
            if (isLiked) {
              heartIcon.querySelector("path").classList.add("hollow-heart");
              heartIcon.querySelector("path").classList.remove("cls-1");
              likeCount--;
            } else {
              heartIcon.querySelector("path").classList.remove("hollow-heart");
              heartIcon.querySelector("path").classList.add("cls-1");
              likeCount++;
            }
            likeCountElement.textContent = likeCount + " Likes";
            isLiked = !isLiked;
            
            // You can also send an AJAX request to update the like count on the server
          });
        }
